# the inventory function (dummy)
def inventory_oracle_gridinfra(info):
    inventory = []
    for line in info:
        if line[0] in ('CRSD', 'Typ'):
            inventory.append((line[0], None))
    return inventory

# the check function (dummy)
def check_oracle_gridinfra(item, params, info):
    for line in info:
        if line[0] == item:
            if line[0] in ('CRSD') and line:
                if line[1] == 'ONLINE':
                    return (0, 'CRSD ONLINE')
                else:
                    return (2, 'CRSD not running')

            elif line[0] in ('Typ'):
                outstr = ''
                for item in line[1:]:
                    outstr = outstr + item + ' '
                return (0, outstr)

    return (3, "no check result found")


# declare the check to Check_MK
check_info["oracle_gi"] = {
    'check_function':            check_oracle_gridinfra,
    'inventory_function':        inventory_oracle_gridinfra,
    'service_description':       'ORA-GI',
}

